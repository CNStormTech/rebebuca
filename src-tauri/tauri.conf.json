{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Rebebuca",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "exists": true,
        "scope": [
          "C:/**/*", "D:/**/*", "E:/**/*", "F:/**/*",
          "$APP/*",
          "$APP/*/*",
          "$DOWNLOAD/*",
          "$DOWNLOAD/*/*",
          "$DESKTOP/*",
          "$DESKTOP/*/*",
          "$DOCUMENT/*",
          "$DOCUMENT/*/*"
        ]
      },
      "app": {
        "all": false,
        "hide": true,
        "show": false
      },
      "dialog": {
        "all": true
      },
      "os": {
        "all":true
      },
      "path": {
        "all": true
      },
      "process": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "shell": {
        "all": true,
        "sidecar": true,
        "execute": true,
        "open": true,
        "scope": [
          {
            "name": "bin/ffmpeg",
            "args": true,
            "sidecar": true
          },
          {
            "name": "run-node",
            "cmd": "node",
            "args": [
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "ffmpeg",
            "cmd": "cmd",
            "args":  [{ "validator": "\\S+" }]
          },
          {
            "name": "mac-ffmpeg",
            "cmd": "ffmpeg",
            "args":  [{ "validator": "\\S+" }]
          },
          {
            "name": "kill-process",
            "cmd": "kill",
            "args":  [{ "validator": "\\S+" }]
          }
        ]
      },
      "window": {
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "Â© 2023 rebebuca. All rights reserved.",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "bin/ffmpeg"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.rebebuca",
      "longDescription": "FFmpeg Desktop Application",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Rebebuca",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "silent": true,
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Rebebuca",
        "width": 1280,
        "height": 770,
        "minHeight": 770,
        "minWidth": 1280,
        "decorations": false
      }
    ]
  }
}